# Plantilla de variables de entorno para STAGING (Agente Hotelero IA)
# Renombrar a .env.staging y completar valores reales. NO COMMIT los secretos reales.

ENVIRONMENT=staging
LOG_LEVEL=INFO
DEBUG=false

# ----------------------------
# PostgreSQL
# ----------------------------
# Formato async requerido por SQLAlchemy 2.x con asyncpg
DATABASE_URL=postgresql+asyncpg://staging_user:REPLACE_PASSWORD@staging-host:5432/staging_db
USE_SUPABASE=false

# ----------------------------
# Redis
# ----------------------------
REDIS_URL=redis://staging-redis:6379/0
REDIS_PASSWORD=REPLACE_REDIS_PASSWORD

# ----------------------------
# PMS (QloApps) - usar mock si no se valida aún contra PMS real
# PMS_TYPE=mock | qloapps
# ----------------------------
PMS_TYPE=mock
PMS_BASE_URL=http://qloapps-staging.internal
PMS_API_KEY=REPLACE_PMS_KEY
PMS_HOTEL_ID=1

# ----------------------------
# WhatsApp Cloud API
# ----------------------------
WHATSAPP_ACCESS_TOKEN=REPLACE
WHATSAPP_PHONE_NUMBER_ID=REPLACE
WHATSAPP_VERIFY_TOKEN=REPLACE
WHATSAPP_APP_SECRET=REPLACE

# ----------------------------
# Gmail / Notificaciones Email
# ----------------------------
GMAIL_USERNAME=notifications@example.com
GMAIL_APP_PASSWORD=REPLACE

# ----------------------------
# Seguridad / JWT
# ----------------------------
SECRET_KEY=REPLACE_SECURE_64_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ----------------------------
# Readiness Flags
# ----------------------------
CHECK_PMS_IN_READINESS=false
CHECK_DB_IN_READINESS=true
CHECK_REDIS_IN_READINESS=true

# ----------------------------
# Métricas / Allowlist IP (añadir IP de Prometheus si remoto)
# ----------------------------
METRICS_ALLOWED_IPS=127.0.0.1,::1

# ----------------------------
# Audio / NLP Opcional
# ----------------------------
AUDIO_ENABLED=true
WHISPER_MODEL=base
WHISPER_LANGUAGE=es

# ----------------------------
# Feature Flags simples (si se integran)
# ----------------------------
# TENANCY_DYNAMIC_ENABLED=true

# ----------------------------
# Alerting / SLO (ejemplo)
# ----------------------------
SLO_TARGET=99.0
SLO_TRAFFIC_FLOOR=0.5

# FIN PLANTILLA STAGING
