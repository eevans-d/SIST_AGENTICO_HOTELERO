# [PROMPT 3.3] Dockerfile.production

# Build stage
FROM python:3.12-slim as builder

WORKDIR /app

# Instalar uv y dependencias de compilaci√≥n
RUN pip install uv && apt-get update && apt-get install -y gcc ffmpeg && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml ./
RUN uv pip install --system --no-cache --all-extras -r pyproject.toml

# Production stage
FROM python:3.12-slim

WORKDIR /app

# Instalar dependencias de runtime
RUN apt-get update && apt-get install -y ffmpeg espeak-ng curl && rm -rf /var/lib/apt/lists/*

COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

COPY . .

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH=/root/.local/bin:$PATH \
    ENVIRONMENT=production

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health/live || exit 1

RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]
